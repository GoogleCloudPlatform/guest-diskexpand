root=$(grep -w / /proc/mounts|grep -v rootfs|cut -d' ' -f1)
if [[ -z "$root" ]] || [[ ! -b "$root" ]]; then
  echo "Couldn't determine root device"
  exit 1
fi

echo "Checking if filesystem on ${root} needs resizing"

if ! out=$(blkid -o udev "$root"); then
  echo "Detecting fstype by blkid failed: ${out}"
  exit 1
fi
  
eval "$out"
if [[ -z "$ID_FS_TYPE" ]]; then
  echo "Unknown filesystem type"
  exit 1
fi

case "$ID_FS_TYPE" in
  ext*)
    if ! out=$(resize2fs "$root"); then
      echo "Calling resize2fs \"${root}\" failed: ${out}"
      exit 1
    fi
    ;;
  xfs*)
    if ! out=$(xfs_growfs -d /); then
      echo "Calling xfs_growfs -d / failed: ${out}"
      exit 1
    fi
    ;;
esac

echo "Done."
exit 0
